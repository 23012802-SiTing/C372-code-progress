<style>
  .btn-shop:hover {
      background-color: #ebcdcd;
  }
  .back {
      color: black; 
      text-decoration: none;
      background-color: #af9d81;
      padding: 5px 20px;
      border-radius: 10px;
      border: none; /* Remove border */
  }
  .allitems {
      right: 20px; 
      position: absolute;
      color: black; 
      text-decoration: none;
      background-color: #af9d81;
      padding: 5px 20px;
      border-radius: 10px;
      border: none; /* Remove border */
  }
</style>

<%- include('partials/navbar.ejs') %>

<div class="container" style="max-width: 1200px;">
  <a href="/"><button class="back">Back</button></a>
  <div class="text-center">
      <h2>CATEGORIES</h2>
  </div>
  <div>
      <a href="/addCategory"><button class="allitems">Add New Category</button></a>
  </div> 
  <br><br>

  <div class="row justify-content-center"> <!-- Center alignment for cards -->
      <% for(let i = 0; i < category.length; i++) { %>
          <div class="col-md-4 col-sm-6 mb-4">
              <div class="card h-100 text-center" style="background-color: #f6f4f1; border: none;">
                  <img src="image/<%= category[i].categoryImage %>" class="card-img-top" alt="<%= category[i].categoryname %>" style="width: auto; height: 300px; object-fit: cover;">
                  <div class="card-body">
                      <a href="/category/<%= category[i].categoryId %>/snack">
                          <h5 class="card-title"><%= category[i].categoryname %></h5> 
                      </a>
                  </div>
                  <div class="card-footer" style="background-color: #f6f4f1; border: none;">
                      <% if (session.user && session.user.userRole === "admin") { %>
                          <a href="/editCategory/<%= category[i].categoryId %>" class="btn btn-sm" style="margin-right: 10px; background-color:#af9d81">Edit</a>
                          <a href="/deleteCategory/<%= category[i].categoryId %>" class="btn btn-sm" style="background-color:#af9d81" onclick="return confirm('Are you sure you want to delete this category?')">Delete</a>
                      <% } %>
                  </div>
              </div>
          </div>
      <% } %>
  </div>
</div>
</body>
</html>